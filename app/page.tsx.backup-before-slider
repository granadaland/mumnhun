async function getHeroSlides() {
  try {
    const res = await fetch(`${process.env.NEXT_PUBLIC_SITE_URL}/api/hero`, {
      cache: 'no-store'
    })
    if (!res.ok) return []
    return res.json()
  } catch (error) {
    console.error('Failed to fetch hero slides:', error)
    return []
  }
}

