                        <div className="flex flex-col justify-center">
                          <div className="w-16 h-4 bg-gray-200 rounded mb-3" />
                          <div className="w-40 h-5 bg-gray-200 rounded mb-2" />
                          <div className="w-32 h-5 bg-gray-200 rounded" />
                        </div>
                      </div>
                    ))}
                  </div>
                )}
              </div>
            </div>
          </div>
        </Container>
      </section>
    </>
  )
}
