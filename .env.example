# Database (Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-ap-southeast-1.pooler.supabase.com:5432/postgres"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT_REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# App Configuration
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="Mum 'n' Hun"

# Admin API guard (required for mutation endpoints like /api/hero POST)
ADMIN_API_SECRET="replace-with-strong-random-secret"

# Comma-separated fallback admin emails for RBAC check on /api/admin/*
ADMIN_EMAILS="admin@mumnhun.id"

# Encryption secret for AI API keys at-rest (AES-256-GCM).
# Use one of: raw passphrase (derived via scrypt), base64:<32-byte-base64>, or hex:<64-hex-chars>
API_KEYS_ENCRYPTION_SECRET="replace-with-strong-encryption-secret"

# CSRF protection for admin mutation routes (/api/admin/* POST/PUT/DELETE)
# Must be a strong random secret used to sign HMAC token per authenticated admin user.
CSRF_SECRET="replace-with-strong-csrf-secret"

# WordPress Migration (for import scripts)
WP_BACKUP_PATH="./wordpress-backup"

# Ops alert webhook (generic JSON payload)
ADMIN_ALERT_WEBHOOK_URL=""

# Slack Incoming Webhook khusus alert operasional admin.
# Jika diisi, payload akan diformat dalam bentuk Slack blocks.
# Prioritas: SLACK_ALERT_WEBHOOK_URL > ADMIN_ALERT_WEBHOOK_URL
SLACK_ALERT_WEBHOOK_URL=""
